    <target name="release" description="makes releases of all.">
        <delete file="${release.file}"/>
        <delete dir="${tmp.dir}"/>
        <mkdir dir="${tmp.dir}/lib" />
        <mkdir dir="${tmp.dir}/plugins" />
        <mkdir dir="${tmp.dir}/config" />

